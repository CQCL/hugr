(hugr 0)

(declare-operation core.call-indirect
  (param ?inputs (list type))
  (param ?outputs (list type))
  (param ?exts ext-set)
  (-> [(-> ?inputs ?outputs ?exts) ?inputs ...] ?outputs ?exts))

(declare-operation core.compose-parallel
  (param ?inputs-0 (list type))
  (param ?inputs-1 (list type))
  (param ?outputs-0 (list type))
  (param ?outputs-1 (list type))
  (param ?exts ext-set)
  (->
    [(-> ?inputs-0 ?outputs-0 ?exts)
     (-> ?inputs-1 ?outputs-1 ?exts)
     ?inputs-0 ...
     ?inputs-1 ...]
    [?outputs-0 ... ?outputs-1 ...]
    ?exts))
